<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

  </head>
  <body>
    <header>
      {{! Navbar start }}
      <nav class="navbar navbar-expand-lg bg-body-primary bg-danger">
        <div class="container-fluid">
          <a class="navbar-brand text-white fs-3 fw-bold" href="#">ShopCart</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link text-white fs-5" href="/">Products</a>
              </li>
              {{#if user}}
              <li class="nav-item">
                <a class="nav-link text-white fs-5" href="#">Cart</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white fs-5" href="#">Orders</a>
              </li>
              {{/if}}
            </ul>
          </div>

          <div class="dropdown me-5">
            <button
              class="btn dropdown-toggle text-danger"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="background-color:aliceblue; font-weight:bold;"
            >
            {{#if user}}
              {{user.Username}}
            {{else}}
              Account
            {{/if}}
            </button>
            <ul class="dropdown-menu">
              {{#if user}}
              <li><a href="/logout" style="text-decoration: none;"><button
                    class="dropdown-item text-danger"
                    type="button"
                    style="font-weight:bold;"
                  >Logout</button></a></li>
              {{else}}
              <li><a href="/login" style="text-decoration: none;"><button
                    class="dropdown-item text-danger"
                    type="button"
                    style="font-weight:bold;"
                  >Login</button></a></li>
              {{/if}}
            </ul>
          </div>

        </div>
      </nav>
      {{! Navbar end }}
    </header>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>