<div class="container mt-5">
  <h2 class="text-center mb-4">Users List</h2>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile Number</th>
    </tr>
  </thead>
  <tbody>
    {{#each usersData}}
    <tr>
      <td>{{this.Username}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Mobile}}</td>
      <td><a href="/admin/edit-user/{{this._id}}" class="btn btn-primary" style="width:5rem; font-weight:bold; color:aliceblue">Edit</a></td>
      <td><a href="/admin/delete-user/{{this._id}}" onclick="return confirm('Do you want to delete {{this.Username}}')" class="btn btn-danger" style="font-weight:bold; color:aliceblue; width:5rem;">Delete<a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>