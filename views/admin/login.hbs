<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 ps-5">
            <h2 class="text-center">Login as Admin</h2>
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="">Pasword</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter password">
                </div>
                {{#if loginErr}}
                    <p class="error text-danger" style="font-size: 0.8rem;">{{loginErr}}</p>
                {{/if}}
                <div class="mt-3">
                    <a href="/admin/signup" class="text-decoration-none text-dark" style="">Create new account?</a>
                    <button type="submit" class="btn btn-danger float-end" style=" color:aliceblue; font-weight:bold">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>